            <HorizontalStackLayout
                Spacing="50"
                Padding="20,0"
                VerticalOptions="Start">

                <Button
                Text="IMPORT SEASON"
                x:Name="button"
                TextColor="Black"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="16"
                HorizontalOptions="Center"
                WidthRequest="300"
                Margin="8"
                Style="{StaticResource ButtonOutline}"
                VerticalOptions="CenterAndExpand"
                Command="{Binding AddSeasonCommand}"/>

                <Button
                Text="EDIT PLAYER"
                x:Name="button3"
                TextColor="Black"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="16"
                HorizontalOptions="Center"
                WidthRequest="300"
                Margin="8"
                Style="{StaticResource ButtonOutline}"
                VerticalOptions="CenterAndExpand"/>

                <Button
                Text="DELETE PLAYER"
                x:Name="button2"
                TextColor="White"
                BackgroundColor="Red"
