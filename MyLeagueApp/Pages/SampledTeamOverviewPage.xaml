            <HorizontalStackLayout
                Spacing="10"
                VerticalOptions="Start">

                <Button
                Text="NEW PLAYER"
                x:Name="button"
                TextColor="Black"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="16"
                HorizontalOptions="Center"
                WidthRequest="250"
                Margin="1"
                Style="{StaticResource ButtonOutline}"
                VerticalOptions="CenterAndExpand"
                Clicked="NewPlayerClicked"/>

                <Button
                Text="EDIT TEAM"
                x:Name="button3"
                TextColor="Black"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="16"
                HorizontalOptions="Center"
                WidthRequest="250"
                Margin="8"
                Style="{StaticResource ButtonOutline}"
                VerticalOptions="CenterAndExpand"
                Clicked="EditTeamClicked"/>

                <Button
                Text="IMPORT SEASON"
                x:Name="button4"
                TextColor="Black"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="16"
                HorizontalOptions="Center"
                WidthRequest="250"
                Margin="8"
                Style="{StaticResource ButtonOutline}"
                VerticalOptions="CenterAndExpand"
                Command="{Binding AddSeasonCommand}"/>

                <Button
                Text="DELETE TEAM"
                x:Name="button2"
                TextColor="White"
                BackgroundColor="Red"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="16"
                HorizontalOptions="Center"
                WidthRequest="250"
                Margin="8"
                Style="{StaticResource ButtonOutline}"
                VerticalOptions="CenterAndExpand"
                Command="{Binding DeleteTeamCommand}"/>

            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>