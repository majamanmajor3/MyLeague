                    <Label Grid.Column="2" Text="{Binding TeamWinPyt2}" TextColor="{Binding PlayerTeamPyt2}" FontSize="20" HorizontalTextAlignment="Center"/>

                </Grid>

            </HorizontalStackLayout>

            <HorizontalStackLayout
                Spacing="47"
                Padding="413,0"
                VerticalOptions="Center"
                IsVisible="{Binding TeamStatsVisibility}">

                <Grid Grid.Row="0" HorizontalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="135"/>
                        <ColumnDefinition Width="75"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Text="{Binding PlayersCount1}" FontSize="20" HorizontalTextAlignment="Center"/>

                    <Label Grid.Column="1" Text="Player Count" FontSize="20" HorizontalTextAlignment="Center"/>

                    <Label Grid.Column="2" Text="{Binding PlayersCount2}" FontSize="20" HorizontalTextAlignment="Center"/>

                </Grid>

            </HorizontalStackLayout>

            <Label Text="" HeightRequest="20"/>

            <Label Grid.Column="0" Text="Teams' Matchups" FontSize="20" HorizontalTextAlignment="Center" IsVisible="{Binding MatchupVisibility}"/>

            <ListView ItemsSource="{Binding Matchups}" x:Name="cv" SeparatorColor="Black" SeparatorVisibility="Default" IsVisible="{Binding MatchupVisibility}" HorizontalOptions="Center">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:GameStatSample">
                        <ViewCell>
                            <Grid Padding="2" HorizontalOptions="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75"/>
                                    <ColumnDefinition Width="105"/>
                                    <ColumnDefinition Width="75"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                   FontSize="20"
                                   Text="{Binding HomeScore}"
                                   HorizontalTextAlignment="Center"/>
                                <Label Grid.Column="1"
                                   Text="{Binding Date}"
                                   FontSize="20"
                                   HorizontalTextAlignment="Center"/>
                                <Label Grid.Column="2"
                                   FontSize="20"
                                   Text="{Binding AwayScore}"
                                   HorizontalTextAlignment="Center"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Text="" HeightRequest="20"/>

            <HorizontalStackLayout
                Spacing="120"
                Padding="190,0"
                VerticalOptions="Center">

                <VerticalStackLayout
                HorizontalOptions="Center">

                    <Label Grid.Column="0" Text="{Binding TeamsEFF1}" FontSize="20" HorizontalTextAlignment="Center" IsVisible="{Binding TeamStatsVisibility}"/>

                    <ListView ItemsSource="{Binding TeamPlayersEfficiency1}" x:Name="cv2" SeparatorColor="Black" SeparatorVisibility="Default" IsVisible="{Binding TeamStatsVisibility}" HorizontalOptions="Center">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:EfficiencyShow">
                                <ViewCell>
                                    <Grid Padding="2" HorizontalOptions="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="225"/>
                                            <ColumnDefinition Width="75"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0"
                                   FontSize="20"
                                   Text="{Binding Name}"
                                   HorizontalTextAlignment="Center"/>
                                        <Label Grid.Column="1"
                                   FontSize="20"
                                   Text="{Binding Efficiency}"
                                   HorizontalTextAlignment="Center"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </VerticalStackLayout>

                <VerticalStackLayout
                HorizontalOptions="Center">

                    <Label Grid.Column="0" Text="{Binding TeamsEFF2}" FontSize="20" HorizontalTextAlignment="Center" IsVisible="{Binding TeamStatsVisibility}"/>

                    <ListView ItemsSource="{Binding TeamPlayersEfficiency2}" x:Name="cv3" SeparatorColor="Black" SeparatorVisibility="Default" IsVisible="{Binding TeamStatsVisibility}" HorizontalOptions="Center">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:EfficiencyShow">
                                <ViewCell>
                                    <Grid Padding="2" HorizontalOptions="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="225"/>
                                            <ColumnDefinition Width="75"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0"
                                   FontSize="20"
                                   Text="{Binding Name}"
                                   HorizontalTextAlignment="Center"/>
                                        <Label Grid.Column="1"
                                   FontSize="20"
                                   Text="{Binding Efficiency}"
                                   HorizontalTextAlignment="Center"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </VerticalStackLayout>

            </HorizontalStackLayout>

            <Label Text="" HeightRequest="20"/>

            <chart:SfCartesianChart IsVisible="{Binding StatsVisibility}" Title="Efficiency by Season Games">

                <chart:SfCartesianChart.XAxes>
                    <chart:CategoryAxis>
                        <chart:CategoryAxis.Title>
                            <chart:ChartAxisTitle Text="Game"></chart:ChartAxisTitle>
                        </chart:CategoryAxis.Title>
                    </chart:CategoryAxis>
                </chart:SfCartesianChart.XAxes >

                <chart:SfCartesianChart.YAxes>
                    <chart:NumericalAxis>
                        <chart:NumericalAxis.Title>
                            <chart:ChartAxisTitle Text="Efficiency"></chart:ChartAxisTitle>
                        </chart:NumericalAxis.Title>
                    </chart:NumericalAxis>
                </chart:SfCartesianChart.YAxes>

                <chart:SfCartesianChart.Legend>
                    <chart:ChartLegend/>
                </chart:SfCartesianChart.Legend>

                <chart:SfCartesianChart.Series>
                    <chart:LineSeries ItemsSource="{Binding GraphDataEfficiency1}"
                        XBindingPath="Id" 
                        YBindingPath="Data"
                        ShowDataLabels="False"
                        Label="{Binding Selected_player1.FullName}"
                        EnableTooltip="True">
                    </chart:LineSeries>
                    <chart:LineSeries ItemsSource="{Binding GraphDataEfficiency2}"
                        XBindingPath="Id" 
                        YBindingPath="Data"
                        ShowDataLabels="False"
                        Label="{Binding Selected_player2.FullName}"
                        EnableTooltip="True">
                    </chart:LineSeries>
                </chart:SfCartesianChart.Series>

            </chart:SfCartesianChart>

            <chart:SfCartesianChart IsVisible="{Binding StatsVisibility}" Title="True Shooting % by Season Games">

                <chart:SfCartesianChart.XAxes>
                    <chart:CategoryAxis>
                        <chart:CategoryAxis.Title>
                            <chart:ChartAxisTitle Text="Game"></chart:ChartAxisTitle>
                        </chart:CategoryAxis.Title>
                    </chart:CategoryAxis>
                </chart:SfCartesianChart.XAxes >

                <chart:SfCartesianChart.YAxes>
                    <chart:NumericalAxis>
                        <chart:NumericalAxis.Title>
                            <chart:ChartAxisTitle Text="TS%"></chart:ChartAxisTitle>
                        </chart:NumericalAxis.Title>
                    </chart:NumericalAxis>
                </chart:SfCartesianChart.YAxes>

                <chart:SfCartesianChart.Legend>
                    <chart:ChartLegend/>
                </chart:SfCartesianChart.Legend>

                <chart:SfCartesianChart.Series>
                    <chart:LineSeries ItemsSource="{Binding GraphDataTrueShooting1}"
                        XBindingPath="Id" 
                        YBindingPath="Data"
                        ShowDataLabels="False"
                        Label="{Binding Selected_player1.FullName}"
                        EnableTooltip="True">
                    </chart:LineSeries>
                    <chart:LineSeries ItemsSource="{Binding GraphDataTrueShooting2}"
                        XBindingPath="Id" 
                        YBindingPath="Data"
                        ShowDataLabels="False"
                        Label="{Binding Selected_player2.FullName}"
                        EnableTooltip="True">
                    </chart:LineSeries>
                </chart:SfCartesianChart.Series>

            </chart:SfCartesianChart>

            <!--</Grid>-->

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>